# Environment Configuration for Doc Formatter
# DO NOT COMMIT SENSITIVE VALUES TO VERSION CONTROL

# Application Settings
REACT_APP_NAME=doc-formatter
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# API Configuration (if needed for future AI integration)
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=30000

# Feature Flags
REACT_APP_ENABLE_AI_FORMATTING=true
REACT_APP_ENABLE_PDF_EXPORT=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# PDF Generation Settings
REACT_APP_MAX_PDF_SIZE_MB=50
REACT_APP_MAX_CONTENT_LENGTH=500000

# Security Settings
REACT_APP_ALLOW_EXTERNAL_SCRIPTS=false
REACT_APP_CSP_ENABLED=true

# Performance Settings
REACT_APP_LAZY_LOADING=true
REACT_APP_CODE_SPLITTING=true

# Development Settings
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0

# Testing Configuration
REACT_APP_TEST_ENVIRONMENT=jsdom
CI=true

# Browser Support
BROWSERSLIST_ENV=production

# Build Optimization
BUILD_PATH=build
PUBLIC_URL=.

# Disable NPM package exposure in production
REACT_APP_NODE_ENV=production
REACT_APP_HIDE_NODE_MODULES=true